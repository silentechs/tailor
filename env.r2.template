# Cloudflare R2 Storage Configuration
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens

# Your Account ID (found on the right side of R2 overview)
R2_ACCOUNT_ID=your_account_id_here

# Create an API Token with Admin Read & Write permission
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here

# The name of your R2 bucket
R2_STORAGE_BUCKET=stitch-craft-storage

# Your Custom Domain (or R2.dev subdomain) for public access
# e.g., assets.stitchcraft.com or pub-xxx.r2.dev
R2_PUBLIC_URL=https://your-public-url.com

